@model E_learning_platform.Models.CourseEditFullDescViewModel
@{
    ViewBag.Title = "Edytuj informacje";
}

<h2>@Model.Name</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal">
        <h3>Edytuj informacje</h3>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.FullDesc, new {@class = "wysiwyg"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>

}
<div>
    @Html.ActionLink("Wróć", "View", "Course", new { id = Model.Id }, null)
</div>

